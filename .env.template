# Server Configuration
PORT=3001
NODE_ENV=development

# DevRev API Configuration
# Get your PAT token from DevRev account settings
# https://app.devrev.ai/settings/tokens
DEVREV_PAT_TOKEN=your_devrev_pat_token_here
DEVREV_API_URL=https://api.devrev.ai/mcp/v1

# Database Configuration
DATABASE_PATH=./data/qa_dashboard.db

